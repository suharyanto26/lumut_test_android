<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/label_a1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greyPrimary" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/v_1"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/greyPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_1"
        app:layout_constraintTop_toTopOf="@id/cv_1" />

    <View
        android:id="@+id/v_2"
        android:layout_width="100dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/greyPrimary"
        app:layout_constraintStart_toStartOf="@id/v_1"
        app:layout_constraintTop_toBottomOf="@id/v_1" />

    <View
        android:id="@+id/v_3"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@color/greyPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_1"
        app:layout_constraintTop_toBottomOf="@id/v_2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#DCDCDC"
        app:layout_constraintTop_toBottomOf="@id/cv_1" />

</androidx.constraintlayout.widget.ConstraintLayout>